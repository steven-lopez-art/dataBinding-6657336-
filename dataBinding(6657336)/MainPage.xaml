<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dataBinding_6657336_"
             x:Class="dataBinding_6657336_.MainPage">

    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Entry x:Name="NombreAlumno" Text="{Binding Nombre}" Placeholder="Ingrese su nombre"/>
        <Label Text="{Binding MostrarNombre}"/>
    </StackLayout>

</ContentPage>
